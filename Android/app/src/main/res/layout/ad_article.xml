<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_category"
    android:orientation="vertical"
    android:paddingStart="@dimen/CategoryItemLeftMargin"
    android:paddingEnd="@dimen/CategoryItemLeftMargin"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/txtArticleName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="start|center"
            android:textColor="@color/colorCommonText"
            android:textSize="20sp"
            android:singleLine="true"
            android:textStyle="bold"
            tools:text="Bananasplit" />

        <TextView
            android:id="@+id/txtArticleSingleItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="â‚¬13" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/txtArticleDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:gravity="start|center"
            android:hint="@string/description"
            android:singleLine="true"
            android:textColor="@color/colorDisabledButton"
            android:textSize="12sp"
            tools:text="Una bananasplit piena di cioccolato dritta nel ciuculu" />

    </LinearLayout>

</LinearLayout>