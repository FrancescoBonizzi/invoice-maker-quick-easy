<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/background_category"
    android:orientation="horizontal"
    android:paddingStart="@dimen/FragmentLeftMargin"
    android:paddingTop="12dp"
    android:paddingEnd="@dimen/FragmentLeftMargin"
    android:paddingBottom="12dp"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/txtCustomerIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/background_customer_icon"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="MC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:hint="@string/customer_name"
            android:textColor="@color/colorCommonText"
            android:textSize="18sp"
            android:singleLine="true"
            android:textStyle="bold"
            tools:text="Mimmone Culacchione" />

        <TextView
            android:id="@+id/txtCustomerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:gravity="end"
            android:hint="@string/phone_number"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="@color/colorDisabledButton"
            android:textSize="12sp"
            tools:text="+39 123 122 5980" />

    </LinearLayout>

</LinearLayout>